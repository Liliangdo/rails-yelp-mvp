
  <h1 class="text-center"><%= @restaurant.name %></h1>

  <p class="text-center"><%= @restaurant.address %></p>
  <p class="text-center"><%= @restaurant.phone_number %></p>
  <p class="text-center"><%= @restaurant.category %></p>


<h1 class="text-center"> <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary btn-md" %></h1>

<% @restaurant.reviews.each do |review| %>


<h1 class="text-center"> Review</h1>

<h2 class="text-center"><%= review.content %></h2>
<h2 class="text-center">Number of Stars: <%= review.rating %></h2>

<%end %>
